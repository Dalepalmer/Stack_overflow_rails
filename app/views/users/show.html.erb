<h1><%= @user.email %>'s profile </h1>
<div class="row">
  <% if @user.questions.any? %>
  <% @user.questions.each  do |question|  %>
  <div class="col-md-2">
    <%= link_to question.title, question_path(@user, question) %>
    <%= link_to "Delete", question_path(@user, question),
    :data => {:confirm => "Do you really want to delete this masterpiece?",
      :method => "delete"} %>
    </div>
    <% end %>
    <% else %>
    <h1>No questions yet</h1>
    <% end %>

    <h2>Feed</h2>
    <% @questions.each do |question| %>
    <ul>
    <li><%= link_to question.title, question_path(question) %> </li>
    </ul>
    <% end %>

  </div>
  <%= link_to 'Add A Question', new_question_path %>
