<h1><%= @user.email %>'s profile </h1>
<div class="row">
  <% if @user.questions.any? %>
  <% @user.questions.each  do |question|  %>
  <div class="col-md-2">
    <%= link_to question.title, user_question_path(@user, question) %>
    <%= link_to "Delete", user_question_path(@user, question),
    :data => {:confirm => "Do you really want to delete this masterpiece?",
      :method => "delete"} %>
    </div>
    <% end %>
    <% else %>
    <h1>No questions yet</h1>
    <% end %>
  </div>
  <%= link_to 'Add A Question', new_user_question_path(@user) %>
