<h1> <%= @question.title %> </h1>

<h3>The question is:</h3>
<p>
  <%= @question.body %>
</p>

<%= render 'answers/answer' %>

<% if @question.answers.any? %>
  <% @question.answers.each do |answer| %>
    <ul>
      <li><%= answer.body %></li>
    </ul>
  <% end %>
<% end %>

<%= link_to "Back", questions_path, :class => "btn btn-primary" %>
